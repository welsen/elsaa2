    +hasPermission('Manage Users')
        +isActive('users', subpage)
            a(href='/admin/users') Manage Users
    +hasPermission('Manage Courses')
        +isActive('courses', subpage)
            a(href='/admin/courses') Manage Courses
    +hasPermission('Manage Classes')
        +isActive('classes', subpage)
            a(href='/admin/classes') Manage Classes
